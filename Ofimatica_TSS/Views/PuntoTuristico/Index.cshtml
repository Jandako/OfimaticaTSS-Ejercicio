@{
    ViewData["Title"] = "Pagina principal";
}

<div class="text-center">
    <div class="col-lg-12">
        <div class="row">
            @{
                if (ViewBag.resultado != null)
                {
                    List<Ofimatica_TSS.Tools.ParadaRuta> paradas = ViewBag.resultado;
                    for (int i = 0; i < paradas.Count; i++)
                    {
                        int ordenParada = i + 1;

                        <div class="col-md-3">
                            <div class="form-group">
                                <img src="~/images/parada-bus.png" style="max-width:1500px; max-height:150px;" />
                                <h3>Orden: @ordenParada </h3>
                                <h3>Paradada: @paradas[i].numeroParada</h3>
                                <h5>Km recorridos: @paradas[i].kmRecorridos</h5>
                                <h5>Peronas que bajan: @paradas[i].numeroPersonas</h5>
                            </div>
                        </div>


                    }

                }
            }
        </div>
    </div>
</div>