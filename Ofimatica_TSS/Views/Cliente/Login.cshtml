
@model Ofimatica_TSS.Models.ClienteViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <div class="row">
        <div class="offset-4 col-md-4 offset-4">



                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="DNI" class="control-label"></label>
                        <input asp-for="DNI" class="form-control text-center" />
                        <span asp-validation-for="DNI" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control text-center" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            
        </div>
    </div>
</div>
